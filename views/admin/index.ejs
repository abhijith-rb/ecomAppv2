    <script>
      let labels = [];
      let data = [];

      $(function() {
        fetch('/admin/saleschart?interval=year',{
          method:'get',
        }).then(response=> response.json())
          .then(data=>{
              console.log(data.labels)
              console.log(data.data)
              labels = [...data.labels];
              data = [...data.data];

              var chartData = {
              labels: labels,
              datasets: [{
                label: '# of Sales',
                data: data,
                backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(255, 206, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)',
                  'rgba(153, 102, 255, 0.2)',
                  'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                  'rgba(255,99,132,1)',
                  'rgba(54, 162, 235, 1)',
                  'rgba(255, 206, 86, 1)',
                  'rgba(75, 192, 192, 1)',
                  'rgba(153, 102, 255, 1)',
                  'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1,
                fill: false
              }]
            };
            var options = {
              scales: {
                yAxes: [{
                  ticks: {
                    beginAtZero: true
                  },
                  gridLines: {
                    color: "rgba(204, 204, 204,0.1)"
                  }
                }],
                xAxes: [{
                  gridLines: {
                    color: "rgba(204, 204, 204,0.1)"
                  }
                }]
              },
              legend: {
                display: false
              },
              elements: {
                point: {
                  radius: 0
                }
              }
            };
       
            if ($("#lineChart").length) {
              var lineChartCanvas = $("#lineChart").get(0).getContext("2d");
              var lineChart = new Chart(lineChartCanvas, {
                type: 'line',
                data: chartData,
                options: options
              });
                }
          })
          .catch((error)=> console.log(error))
      })

