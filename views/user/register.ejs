    <script>
      let verified = false;
      const getCode = document.querySelector("#getCode")
      getCode.addEventListener("click", () => {
        console.log("button clicked 29-10")
        const email = document.getElementsByName('email')[0].value;
        const emailRegex = /^\S+@\S+\.\S+$/;
        let errMsg = document.getElementById('errMsg');
        const scsMsg = document.getElementById('scsMsg');

        if (!emailRegex.test(email)) {
          errMsg.textContent = 'Invalid Email address';
          return;
        }

        fetch("/send-code", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email: email })
        })
          .then((res) => {
            scsMsg.textContent = 'Otp Sent successfully';
            setTimeout(() => {
              scsMsg.textContent = "";
            }, 3000)
          })
          .catch((err) => {
            console.log(err)
            errMsg.textContent = err.response.data.msg;
            setTimeout(() => {
              errMsg.textContent = "";
            }, 2000)
          })
      })

      const verifyCode = document.getElementById("verifyCode")
      verifyCode.addEventListener("click", () => {
        const email = document.getElementsByName('email')[0].value;
        const otp = document.getElementById("otp").value;
        const emailRegex = /^\S+@\S+\.\S+$/;
        let errMsg = document.getElementById('errMsg');
        const scsMsg = document.getElementById('scsMsg');

        if (!emailRegex.test(email)) {
          errMsg.textContent = 'Invalid Email address';
          return;
        }

        fetch("/verify-code", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({otp: otp, email: email })
        })
        .then(async (response)=>{
          const data = await response.json();
          if(response.ok){
            return data;
          }else{
            throw new Error(data.msg)
          }
        })
        .then((data)=>{
          console.log("data",data)
          verified = true;
          scsMsg.textContent = data.msg;
            setTimeout(() => {
              scsMsg.textContent = "";
            }, 5000)
        })
        .catch((err)=>{
          console.log(err)
          errMsg.textContent = err.message;
            setTimeout(() => {
              errMsg.textContent = "";
            }, 5000)
        })
      


      })

      const form = document.getElementById('regForm');

      form.addEventListener('submit', (e) => {
        e.preventDefault();
        console.log("form submission fn invoked")

        const username = document.getElementsByName('username')[0].value;
        const email = document.getElementsByName('email')[0].value;
        const mobile = document.getElementsByName('mobile')[0].value;
        const password = document.getElementsByName('password')[0].value;
        const rePassword = document.getElementsByName('rePassword')[0].value;

        const usernameRegex = /^[a-zA-Z0-9]{3,20}$/;
        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d@$!%*?&]{8,20}$/
        const emailRegex = /^\S+@\S+\.\S+$/;
        const mobileRegex = /^\d{10}$/;
        let errMsg = document.getElementById('errMsg');

        if (!usernameRegex.test(username)) {
          errMsg.textContent = 'Username must be atleast 4 characters long'
          // alert('Username must be atleast 4 characters long')
          return;
        }

        if (!emailRegex.test(email)) {
          errMsg.textContent = 'Invalid Email address';
          return;
        }

        if (!mobileRegex.test(mobile)) {
          errMsg.textContent = 'Please enter valid mobile number'
          // alert('Please enter valid mobile number')
          return;
        }

        if (!passwordRegex.test(password)) {
          errMsg.textContent = 'Password not valid'
          // alert('Password not valid')
          return;
        }

        if (password !== rePassword) {
          errMsg.textContent = "Passwords do not match"
          // alert("Passwords do not match");
          return;
        }

        if(verified){
          form.submit();
        }else{
          errMsg.textContent = "Verify email"
          return;
        }

      })


    </script>


