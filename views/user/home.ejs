    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="css/style.css" rel="stylesheet">
</head>

<body>
    <style>
        .product-item{
           border-radius: 10px;
           box-shadow: 5px 5px 22px -6px rgba(0,0,0,0.5);
           background-color: #ffffff;
        }
    </style>

    <%- include('../partials/user-header') %>
    

    <!-- Carousel Start -->
    <div class="container-fluid mb-3">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#header-carousel" data-slide-to="1"></li>
                        <li data-target="#header-carousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item position-relative active" style="height: 430px;">
                            <%if(largeBanners[0].image){%>
                                <img class="position-absolute w-100 h-100" src="images/<%=largeBanners[0].image%>" style="object-fit: cover;">
                            <%}else{%>
                                <img class="position-absolute w-100 h-100" src="images/noBanner.png" style="object-fit: cover;">

                            <%}%>
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown"><%=largeBanners[0].title%></h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn"><%=largeBanners[0].description%></p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="/<%=largeBanners[0].buttonUrl%>"><%=largeBanners[0].buttonText%></a>
                                </div>
                            </div>
                        </div>
                        <%largeBanners.slice(1).forEach((lb,i)=>{%>
                            <div class="carousel-item position-relative" style="height: 430px;">
                                <img class="position-absolute w-100 h-100" src="images/<%=lb.image%>" style="object-fit: cover;">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 700px;">
                                        <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown"><%=lb.title%></h1>
                                        <p class="mx-md-5 px-5 animate__animated animate__bounceIn"><%=lb.description%></p>
                                        <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="/<%=lb.buttonUrl%>"><%=lb.buttonText%></a>
                                    </div>
                                </div>
                            </div>

                        <%})%>


                    </div>
                </div>
            </div>
            <div class="col-lg-4">
               <%mediumBanners.forEach((mb,i)=>{%>
                    <div class="product-offer mb-30" style="height: 200px;">
                        <img class="img-fluid" src="images/<%=mb.image%>" alt="">
                        <div class="offer-text">
                            <h6 class="text-white text-uppercase"><%=mb.description%></h6>
                            <h3 class="text-white mb-3"><%=mb.title%></h3>
                            <a href="/<%=mb.buttonUrl%>" class="btn btn-primary"><%=mb.buttonText%></a>
                        </div>
                    </div>

               <%})%> 
                
            </div>
        </div>
    </div>
    <!-- Carousel End -->


    <!-- Featured Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">Quality Product</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                    <h5 class="font-weight-semi-bold m-0">Free Shipping</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">14-Day Return</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">24/7 Support</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- Featured End -->


    <!-- Categories Start -->
    <div class="container-fluid pt-5">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Categories</span></h2>
        <div class="row px-xl-5 pb-3">

        <%categories.forEach((cat,i)=>{%>
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="/category/<%=cat._id%>">
                    <div class="cat-item d-flex align-items-center mb-4">
                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <img class="img-fluid" src="images/<%=cat.image%>" alt="">
                        </div>
                        <div class="flex-fill pl-3">
                            <h6><%=cat.name%></h6>
                            <!-- <small class="text-body">100 Products</small> -->
                        </div>
                    </div>
                </a>
            </div>
        <%})%>           

        </div>
    </div>
    <!-- Categories End -->


    <!-- Products Start -->
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Featured Products</span></h2>
        <div class="row px-xl-5">

        <%featuredProducts.forEach((fp,i)=>{%>
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item mb-4 p-2">
                    <div class="product-img position-relative overflow-hidden" style="height: 20rem;">
                        <img class="img-fluid w-100" src="images/<%=fp.image[0].filename%>" alt="">
                        <div class="product-action">
                            
                            <a class="btn btn-outline-dark btn-square" href="/detail/<%=fp._id%>"><i class="fa fa-search"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href=""><%=fp.name%></a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>₹<%=Math.floor(fp.price-fp.price*fp.offerDiscount/100)%></h5><h6 class="text-muted ml-2"><del>₹<%=fp.price%></del></h6>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small>(99)</small>
                        </div>
                    </div>
                </div>
            </div>
        <%})%>
           


        </div>
    </div>
    <!-- Products End -->


    <!-- Offer Start -->
    <div class="container-fluid pt-5 pb-3">
        <div class="row px-xl-5">
            <%mediumBanners.forEach((mb,i)=>{%>
                <div class="col-md-6">
                    <div class="product-offer mb-30" style="height: 300px;">
                        <img class="img-fluid" src="images/<%=mb.image%>" alt="">
                        <div class="offer-text">
                            <h6 class="text-white text-uppercase"><%=mb.description%></h6>
                            <h3 class="text-white mb-3"><%=mb.title%></h3>
                            <a href="/<%=mb.buttonUrl%>" class="btn btn-primary"><%=mb.buttonText%></a>
                        </div>
                    </div>
                </div>

            <%})%>

            
        </div>
    </div>
    <!-- Offer End -->


    <!-- Products Start -->
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Recent Products</span></h2>
        <div class="row px-xl-5">

        <%recentProducts.forEach((rp,i)=>{%>
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item mb-4 p-2">
                    <div class="product-img position-relative overflow-hidden" style="height: 20rem;">
                        <img class="img-fluid w-100" src="images/<%=rp.image[0].filename%>" alt="">
                        <div class="product-action">
                          
                            <a class="btn btn-outline-dark btn-square" href="/detail/<%=rp._id%>"><i class="fa fa-search"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href=""><%=rp.name%></a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>₹<%=Math.floor(rp.price-rp.price*rp.offerDiscount/100)%></h5><h6 class="text-muted ml-2"><del>₹<%=rp.price%></del></h6>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small>(99)</small>
                        </div>
                    </div>
                </div>
            </div>

        <%})%>
            

            
        </div>
    </div>
