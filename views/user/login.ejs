<body>

    <style>
        *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .container {
        height: 70vh;
        margin: 0 auto;
        position: relative;
        background-color: transparent;
        /* background-color: #FFD333; */
        display: flex;
        flex-direction: column;
        justify-content: center;
      }

      .container .form-1 {
        display: flex;
        flex-direction: column;
        position: absolute;
        top: 0%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #fff;
        width: 40%;
        box-shadow: 0 19px 38px rgba(0, 0, 0, 0.3);
        padding-left: 5%;
        padding-right: 5%;
      }

      .form-1 h1 {
        color: #6c757d;
        text-align: center;
        margin-top: 0.7rem;
        margin-bottom: 1.5rem;
      }

      .form-1 input[type="text"],
      input[type="password"] {
        border: none;
        outline: none;
        border-bottom: 1px solid;
        background: none;
        margin: 0.9rem 2rem;
        font-size: 1rem;
      }

      .form-1 label {
        margin: 0 2rem;
      }

      .form-1 span {
        margin: 0 2rem;
        color: blue;
        cursor: pointer;
      }

      .form-1 button {
        margin-top: 2rem;
        margin-bottom: 1.5rem;
        margin-left: 35%;
        margin-right: 35%;
        padding: 0.5rem;
        cursor: pointer;
        border-radius: 1rem;
        border: none;
        font-size: 1.1rem;
        font-weight: bolder;
        color: #6c757d;
        background-color: #FFD333;
      }

      .lbtgrp{
        display: flex;
        justify-content: space-around;
      }

      .lbt {
        margin-top: 1rem;
        margin-bottom: 1rem;
        padding: 0.5rem;
        text-align: center;
        border-radius: 1rem;
        border: none;
        cursor: pointer;
        font-size: 0.8rem;
        font-weight: bolder;
        color: #6c757d;
      }

/* ........///Sign-Up///......... */

    .form-1 p {
        text-align: center;
        font-weight: bolder;
      }

/* ....///Media query///..... */

      @media (max-width: 501px) {
        
        
        .container .form-1 {
            font-size: 15px;
          width: 300px;
        }
      }

      @media (min-width: 380px) and (max-width: 501px) {
        
        
