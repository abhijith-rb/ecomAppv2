    <script>
        const button = document.getElementById('placeOrder');

        button.addEventListener('click',async(e)=>{
            e.preventDefault();
            console.log('button clicked')
            let firstnameBill = document.getElementById('fnbill').value
            let lastnameBill = document.getElementById('lnbill').value
            let mobileBill = document.getElementById('mobilebill').value
            let emailBill = document.getElementById('emailbill').value
            let addressline1Bill = document.getElementById('al1bill').value
            let addressline2Bill = document.getElementById('al2bill').value
            let cityBill = document.getElementById('citybill').value
            let stateBill = document.getElementById('statebill').value
            let ctryBill = document.getElementById('ctrybill').value
            let pinBill = document.getElementById('pinbill').value
            
            let firstnameship = document.getElementById('fnship').value
            let lastnameship = document.getElementById('lnship').value
            let mobileship = document.getElementById('mobileship').value
            let emailship = document.getElementById('emailship').value
            let addressline1ship = document.getElementById('al1ship').value
            let addressline2ship = document.getElementById('al2ship').value
            let cityship = document.getElementById('cityship').value
            let stateship = document.getElementById('stateship').value
            let ctryship = document.getElementById('ctryship').value
            let pinship = document.getElementById('pinship').value

            let upi = document.getElementById('upi')
            let cod = document.getElementById('cod')
            let cards = document.getElementById('debitCard')
            let paymentMethod;
            
            if(upi.checked){
                paymentMethod = 'UPI'
            }else if(cod.checked){
                paymentMethod = 'COD'
            }else if(cards.checked){
                paymentMethod = 'Credit/Debit/ATM Card'
            }else{
                alert('Select a payment Method');
                return;
            }

            let checkbox = document.getElementById('shipto');
            console.log("hello" + checkbox)
            let isChecked = checkbox.checked;
            console.log("value of isChecked"+ isChecked)

            if(isChecked){
                const data = {
                    billAddress:{
                        firstname:firstnameBill,
                        lastname:lastnameBill,
                        mobile:mobileBill,
                        email:emailBill,
                        addressline1:addressline1Bill,
                        addressline2:addressline2Bill,
                        city:cityBill,
                        state:stateBill,
                        country:ctryBill,
                        pin:pinBill 
                    },
                    shipAddress:{
                        firstname:firstnameship,
                        lastname:lastnameship,
                        mobile:mobileship,
                        email:emailship,
                        addressline1:addressline1ship,
                        addressline2:addressline2ship,
                        city:cityship,
                        state:stateship,
                        country:ctryship,
                        pin:pinship
                    },
                    paymentMethod
                }

                console.log('is checked')
                const response = await fetch('/placeOrder',{
                    method:'POST',
                    headers:{
                        'Content-Type':'application/json'
                    },
                    body:JSON.stringify(data)
                })

                const resData = await response.json();
                if(resData.codSuccess){
                    window.location.href = "/success";
                }else{
                    razorPayment(resData);
                }
            }else{
                const data = {
                    billAddress:{
                        firstname:firstnameBill,
                        lastname:lastnameBill,
                        mobile:mobileBill,
                        email:emailBill,
                        addressline1:addressline1Bill,
                        addressline2:addressline2Bill,
                        city:cityBill,
                        state:stateBill,
                        country:ctryBill,
                        pin:pinBill 
                    },
                    shipAddress:{
                        firstname:firstnameBill,
                        lastname:lastnameBill,
                        mobile:mobileBill,
                        email:emailBill,
                        addressline1:addressline1Bill,
                        addressline2:addressline2Bill,
                        city:cityBill,
                        state:stateBill,
                        country:ctryBill,
                        pin:pinBill
                    },
                    paymentMethod
                }
                console.log('not checked')
                const response = await fetch('/placeOrder',{
                    method:'POST',
                    headers:{
                        'Content-Type':'application/json'
                    },
                    body:JSON.stringify(data)
                })

                const resData = await response.json();
                console.log(resData)
                if(resData.codSuccess){
                    window.location.href = "/success";
                }else{
                    razorPayment(resData);
                }
            }
        })

        const razorPayment= (order)=>{
            
            const options = {
            "key": "rzp_test_6JFoZx1fYTkS3n", 
            "amount": order.amount,
            "currency": "INR",
            "name": "Sole Avenue",
            "description": "Test Transaction",
            "image": "https://example.com/your_logo",
            "order_id": order.id, 
            "handler": function (response){
                console.log(response)
                verifyPayment(response,order)
            },
            "prefill": {
                "name": "Gaurav Kumar",
                "email": "gaurav.kumar@example.com",
                "contact": "9999999999"
            },
            "notes": {
                "address": "Razorpay Corporate Office"
            },
            "theme": {
                "color": "#3399cc"
                    }
                }
            const rzp = new Razorpay(options);
            rzp.open();
            }

            function verifyPayment(payment,order){
            $.ajax({
                url:'/verifyPayment',
                method:'post',
                data:{
                    payment,
                    order
                },
                success:(response)=>{
                    if(response.status){
                        window.location.href= '/success'
                    }else{
                        alert('Payment Failed')
                    }
                },
                error:(err)=>{
                    console.log(err)
                }

            })
            }
    </script>

