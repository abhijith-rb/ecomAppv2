    <script>
        const productList = document.getElementById('productList');
        const products = JSON.parse(productList.dataset.fullproducts);

        //Filter by price
        const priceForm = document.getElementById('priceForm');
        let checkedInputs = []

        priceForm.addEventListener('submit',(e)=>{
            e.preventDefault();
            const category = e.target.dataset.category;
            const priceInputs = document.querySelectorAll('.priceInputs');
            priceInputs.forEach(input=>{
                if(input.checked){
                    checkedInputs.push(input.name)
                }
            })
            console.log(checkedInputs);
            fetch('/priceFilter',{
                method:'post',
                headers:{
                    'Content-Type':'application/json'
                },
                body:JSON.stringify({checkedInputs,category})
            })
            .then(response=> response.json())
            .then(updatedProducts=>{
                let updatedHTML = '';
                if(updatedProducts.length > 0){

                    updatedProducts.forEach(product => {
                    updatedHTML += `
                                <div class="product-item bg-light mb-4">
                                    <div class="product-img position-relative overflow-hidden" style="height: 15rem;">
                                        <img style="width: 15vw;" src="/images/${product.image[0].filename}" onerror="this.onerror=null;this.src='/images/noImg.png';" alt="">
                                        <div class="product-action">
                                            <a class="btn btn-outline-dark btn-square" href="/detail/${product._id}"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                    <div class="text-center py-4">
                                        <a class="h6 text-decoration-none text-truncate" href="">${product.name}</a>
                                        <div class="d-flex align-items-center justify-content-center mt-2">
                                            <h5>₹${product.price}</h5>
                                        </div>
                                        
                                    </div>
                                </div>
                        `;
                    });
                }else{
                    updatedHTML += '<h2 style="text-align:center">No Matching Results</h2>'
                }

                productList.innerHTML = updatedHTML;
            })
            .catch(error => {
                console.error(error);
            })
        })

        //sort Latest
        const sortLatestElement = document.getElementById('sortLatest');

        sortLatestElement.addEventListener('click', (event) => {
            event.preventDefault();

            const currentSort = sortLatestElement.dataset.sort;

            let filteredProducts = products.filter((product) => {
                if (checkedInputs.includes('price-all')) {
                return true;
                } else if (checkedInputs.includes('price-1')) {
                return product.price >= 0 && product.price <= 1000;
                } else if (checkedInputs.includes('price-2')) {
                return product.price >= 1000 && product.price <= 2000;
                } else if (checkedInputs.includes('price-3')) {
                return product.price >= 2000 && product.price <= 3000;
                } else if (checkedInputs.includes('price-4')) {
                return product.price >= 3000 && product.price <= 4000;
                } else if (checkedInputs.includes('price-5')) {
                return product.price >= 4000 && product.price <= 100000;
                }else{
                return true;
                }
            });

            filteredProducts.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));

            let updatedHTML = '';
            if (filteredProducts.length > 0) {
                filteredProducts.forEach((product) => {
                    updatedHTML += `
                                <div class="product-item bg-light mb-4">
                                    <div class="product-img position-relative overflow-hidden" style="height: 15rem;">
